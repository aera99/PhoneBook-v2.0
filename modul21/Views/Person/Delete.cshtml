@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using modul21.Models.Entitys
@model Person
<html>
    <head>
    <title>Удаление</title>
    </head>
    <body>
    <div>
        <h1>Удаление</h1>
        <h2>Вы действительно хотите удалить этого пользователя?</h2>
        <h3>@Model.FirstName</h3>
        <h3>@Model.LastName</h3>
        <h3>@Model.MiddleName</h3>
    </div>
    <div>
        <form asp-controller="Person" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <div>
                <input type="submit" value="Удалить" />
            </div>
        </form>
    </div>
    </body>
</html>
